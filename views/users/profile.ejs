<% include ../partials/header %>
<div class="well">
    Name: <%= user.firstName + " " + user.lastName %>
    <br>
    Email: <%= user.email %>
    <% if(currentUser && !(user._id.equals(currentUser._id)) && (status && !(status === "requested" || status === "pending" || status === "accepted"))) { %>
        <form action="/addfriend/<%= user._id %>" method="GET">
            <button class="btn btn-success btn-md">Add as friend</button>
        </form>
    <% } %>
    <% if (currentUser && status === "accepted" && !(user._id.equals(currentUser._id))) { %>
        <a class="btn btn-danger" href="/removefriend/<%= user._id %>">Unfriend</a>
    <% } %>
    <% if(user._id.equals(currentUser._id)) { %>
        <a href="/edit" class="btn btn-warning">Edit</a>    
    <% } %>
    
    
     
</div>
<% include ../partials/footer %>